{{> header}}

<!-- All TASKS View -->
<div style="margin-top:3%; padding-top: 3%;" class="container">


    <section id="allSongsView">
        <div class="background-spotify">
            <div class="song-container">
                <h1>All Songs</h1>
                <a href="#/TASK/create">
                    <button type="button" class="btn-lg btn-block new-song-btn">Add a new song</button>
                </a>
                {{#each TASK}}
                <div class="song">
                    <h5>Title: {{ title }}</h5>
                    <h5>Artist: {{ artist }}</h5>
                    <img class="cover" src="{{imageURL}}" />
                    <p>Likes: {{likes}} Listens {{listens}}: times</p>
                    {{!-- {{#if canDonate}} --}}

                    <a href="#/TASK/like/{{ id }}"><button type="button" class="btn btn-primary mt-4">Like</button></a>

                    {{!-- {{else}} --}}

                    <a href="#/TASK/close/{{ id }}"><button type="button"
                            class="btn btn-danger mt-4">Remove</button></a>
                    <a href="#/TASK/listen/{{ id }}"><button type="button"
                            class="btn btn-success mt-4">Listen</button></a>

                    {{!-- {{/if}} --}}
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    {{#each TASK}}

    {{!-- <a href="#/TASK/details/{{ id }}"  set the ID --}}

    {{else}}
    {{!-- NO TASKS --}}
    {{/each}}


</div>
<!-- All TASKS View -->
{{> footer}}