{{> header}}
<!-- Details View  -->

<!-- Details -->
<div class="container details">
    <div class="details-content">
        <h2>{{title}}</h2>
        <strong>{{category}}</strong>
        <p>{{content}}</p>
        <div class="buttons">
            <a href="#/home" class="btn edit">Back</a>
            {{#if canDonate}}
            {{!-- IF USER IS NOT! CREATOR --}}
            {{!-- method="POST" action="#/TASK/donate/{{ id }}" --}}

            {{else}}
            {{!-- href="#/TASK/close/{{ id }}" --}} {{!-- IF USER IS CREATOR --}}
            <a href="#/TASK/close/{{ id }}" class="btn delete">Delete</a>
            <a href="#/TASK/edit/{{id}}" class="btn edit">Edit</a>

            {{/if}}

        </div>
    </div>
</div>

<!-- ./Details View  -->
{{> footer}}